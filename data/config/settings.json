{
    "VideoLib" : {
        "decodersPerGroup" : 50,

        "video_lib" : { # id in mod_info.json
            "videos" : {
                "vl_demo" : "data/videos/jabroni.mp4",
                "vl_ufos" : "data/videos/ufos.mp4",
                "vl_ufos_t" : "data/videos/ufos_transparent.webm",
                "vl_mop" : "data/videos/fred-fred-mopping.gif",
                "vl_brule" : "data/videos/brule.gif",
                "vl_test" : "data/videos/test_video.webm"
            },

            "images" : {
                "vl_jpeg" : "data/videos/jpeg.jpg",
                "vl_png" : "data/videos/png.png"
            },

            # Note for textures: requires transparent pixel padding to next power-of-two dimensions if video resolution isn't already; see pad_video_pot.ps1
            "autoTexProjectorOverrides" : { # example: defined in graphics/portraits in mod folder
                "graphics/portraits/vl_portrait_example.png" : {
                    "width" : 128,
                    "height" : 128,

                    # Both of these default to true if not set
                    "campaignRunWhilePaused" : true, # EveryFrameScript.runWhilePaused() return value, if false then frames won't update for this override when campaign layer is paused
                    "combatRunWhilePaused" : true, # AutoTexProjectorAPI.combatRunWhilePaused() impl return value, if false then frames won't update for this override when combat layer is paused
                    "videoId" : "vl_brule",

                    # Defaults to false if not set
                    # IMPORTANT: if true, video dimensions MUST be the same as the target's source image, and use the game's texture semantics, such that it has an alpha channel and is padded to the next power-of-two with transparent pixels, with the video itself being in the BL corner of the greater padded frame.
                    # if the video and the target source image both already have power-of-two dimensions, then it doesn't require preprocessing.
                    "overwriteInVram" : true,

                    # Defaults to false if not set
                    # If true, the video will speed up according to campaignSpeedupMult
                    "useCampaignSpeedup" : false
                },

                "graphics/billboards/vl_example_100x100.png" : {
                    "videoId" : "vl_test",
                    "campaignRunWhilePaused" : false,
                    "overwriteInVram" : true,
                    "useCampaignSpeedup" : true
                }
            }
        }
    },

    "plugins" : {
        "vl_CombatPlugin" : "videolib.VideoLibCombatPlugin",
        "vl_CombatPlanetChecker" : "videolib.planetlistener.CombatPlanetChecker"
    }
}